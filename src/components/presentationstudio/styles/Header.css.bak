/* ===== Presentation Header | Athena Upgrade ===== */

.presentation-studio-header {
  background: #ffffff;
  padding: 1.25rem 2rem;
  border-radius: 1.25rem;
  border: 1px solid #ece9ff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  box-shadow: 0px 6px 20px rgba(93, 14, 255, 0.08);
}

/* Gradient Title */
.presentation-studio-title {
  background: linear-gradient(90deg, #5D0EFF, #FF3CAC);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 2rem;
  font-weight: 700;
}

.presentation-studio-subtitle {
  font-size: 0.95rem;
  font-weight: 500;
  color: #7a7a8e;
}

/* Button Group */
.presentation-studio-header-actions {
  display: flex;
  gap: 0.75rem;
}

/* Buttons */
.presentation-studio-button {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.6rem 1.1rem;
  font-size: 0.9rem;
  border-radius: 0.7rem;
  cursor: pointer;
  transition: 0.2s ease;
  border: 1.8px solid #e5e0ff;
  background: #ffffff;
  color: #4B3EF9;
  font-weight: 600;
  box-shadow: 0 2px 10px rgba(93, 14, 255, 0.08);
}

.presentation-studio-button:hover {
  background: #f3f0ff;
  border-color: #5D0EFF;
  transform: translateY(-2px);
}

/* Primary Button */
.presentation-studio-button-primary {
  background: #5D0EFF;
  border: none;
  color: #ffffff;
}

.presentation-studio-button-primary:hover {
  background: #6b4bff;
}

/* Disabled State */
.presentation-studio-button-disabled {
  opacity: 0.55;
  cursor: not-allowed;
}

/* Dropdown */
.presentation-studio-dropdown {
  position: relative;
}

.presentation-studio-dropdown-menu {
  position: absolute;
  right: 0;
  background: #ffffff;
  border: 1px solid #e8ddff;
  border-radius: 0.7rem;
  margin-top: 0.4rem;
  width: 160px;
  overflow: hidden;
  box-shadow: 0px 10px 28px rgba(93, 14, 255, 0.15);
  animation: fadeIn 0.15s ease-out;
  display: flex;
  flex-direction: column;
}

.presentation-studio-dropdown-item {
  padding: 0.7rem 1rem;
  text-align: left;
  font-size: 0.88rem;
  font-weight: 500;
  border: none;
  background: #ffffff;
  cursor: pointer;
}

.presentation-studio-dropdown-item:hover {
  background: #f2eaff;
}

/* Animation */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-6px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Responsive */
@media (max-width: 768px) {
  .presentation-studio-header {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }
}
